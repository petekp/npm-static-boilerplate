{
  "name": "npm_static_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "jshint assets/js/*.js",
    "prebuild": "npm run clean -s && mkdirp dist/public/{css,js}",
    "prebuild:js": "npm run lint",
    "build:js": "uglifyjs -o dist/public/js/main.min.js assets/js/main.js",
    "build:html": "jade assets/jade/index.jade -o dist/public",
    "build:css": "postcss -u lost -u precss -u autoprefixer -u cssnano assets/css/main.css -o  dist/public/css/main.min.css",
    "build": "npm run build:js -s && npm run build:css -s && npm run build:html -s",
    "start": "http-server dist/public/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "clean-css": "^3.4.9",
    "cssnano": "^3.5.2",
    "http-server": "^0.8.5",
    "jade": "^1.11.0",
    "jshint": "^2.9.1",
    "lost": "^6.7.1",
    "mkdirp": "^0.5.1",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.16",
    "postcss-cli": "^2.5.1",
    "precss": "^1.4.0",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.1",
    "watch": "^0.17.1"
  }
}
